<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="PhotoViewer.Layout.MainScreen">
  <Grid>
    <StackLayout Orientation="Vertical" IsVisible="{Binding NoPictureExists}" >
      <Label Text="You have no pictures, add pictures now!" VerticalOptions="Center" HorizontalOptions="Center" />
      <Button Command="{Binding AddPictureCommand}" Text="Add pictures"></Button>
    </StackLayout>
    <StackLayout Orientation="Vertical" IsVisible="{Binding AnyPictureExists}" >
      <Label VerticalOptions="Center" HorizontalOptions="Center" Text="Your Pictures" ></Label>
      <ListView ItemsSource="{Binding Pictures}">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <ViewCell.View>
                <StackLayout Orientation="Horizontal">
                  <Image Source="{Binding ImageSource}"></Image>
                </StackLayout>
              </ViewCell.View>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </Grid>
</ContentPage>